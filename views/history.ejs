History
<link rel="stylesheet" href="/styleHistory.css">


<ul>
    <% arrReview.forEach((review) => { %>
     <div class="center">
        <li><% let img =  "https://image.tmdb.org/t/p/original" + review.movie.poster%>
            <img src= <%= img %> alt="Movie Image" class="movieImg">
             <h4><%= review.movie.title %></h4>
             <form action="/history/delete" method="POST">
                <input type="hidden" value="<%= review.movie.title %>" name="title">
                <input type="hidden" value="<%= review.movie.id %>" name="id">
                <input type="submit" value="Delete">
            </form>
            <form action="/reviewPage" method="GET">
                <input type="hidden" value="<%= review.movie.title %>" name="title">
                <input type="hidden" value="<%= review.movie.id %>" name="id">
                <input type="submit" value="Review">
            </form>
        </li>
    </div>
    <% }) %>
</ul>